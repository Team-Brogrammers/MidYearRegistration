<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewConcessionActivity">

    <TextView
        android:id="@+id/tvConcessionStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Student Number:"
        app:layout_constraintRight_toLeftOf="@id/tvConcessionStudentVal"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@color/colorAccent" />

    <TextView
        android:id="@+id/tvConcessionStudentVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toRightOf="@id/tvConcessionStudent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvConcessionCourse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:text="@string/course_name"
        app:layout_constraintTop_toBottomOf="@id/tvConcessionStudent"
        tools:background="@color/colorAccent" />

    <TextView
        android:id="@+id/tvConcessionCourseVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvConcessionStudent"
        app:layout_constraintLeft_toRightOf="@id/tvConcessionCourse"/>

    <WebView
        android:id="@+id/wvPdfView"
        android:layout_width="368dp"
        android:layout_height="433dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvConcessionCourse" />
</android.support.constraint.ConstraintLayout>